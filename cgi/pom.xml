<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  
  <groupId>eu.stratuslab.pkgs</groupId>
  <artifactId>stratuslab.web.monitor</artifactId>
  <packaging>rpm</packaging>
  <version>0.1-StratusLab.SNAPSHOT</version>
  <name>StratusLab Web Monitor</name>
  <url>http://stratuslab.eu/</url>

  <parent>
    <groupId>eu.stratuslab.pkgs</groupId>
    <artifactId>stratuslab.parent</artifactId>
    <version>0.1-StratusLab.SNAPSHOT</version>
  </parent>
  
  <profiles>
    <profile>
      <id>rpm</id>
      <activation>
	<file>
	  <exists>/bin/rpm</exists>
	</file>
      </activation>
      <build>

	<plugins>

	  <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-resources-plugin</artifactId>
	    
	    <configuration>
	      <encoding>UTF-8</encoding>
	    </configuration>
	    
	    <executions>
	      <execution>
		<id>insert-metadata</id>
		<phase>process-sources</phase>
		<goals>
		  <goal>copy-resources</goal>
		</goals>
		
		<configuration>
		  <delimiters>
		    <delimiter>${*}</delimiter>
		  </delimiters>
		  <outputDirectory>${project.build.directory}/python</outputDirectory>
		  <resources>
		    <resource>
		      <directory>src/main/python</directory>
		      <filtering>true</filtering>
		    </resource>
		  </resources>
		</configuration>
		
	      </execution>
	    </executions>
	    
	  </plugin>

	  <plugin>
	    <groupId>org.codehaus.mojo</groupId>
	    <artifactId>rpm-maven-plugin</artifactId>
	    <extensions>true</extensions>
	    <executions>
	      <execution>
		<goals>
		  <goal>rpm</goal>
		</goals>
	      </execution>
	    </executions>
	  </plugin>
	</plugins>
      </build>
    </profile>
    <profile>
      <id>deb</id>
      <activation>
	<file>
	  <exists>/usr/bin/alien</exists>
	</file>
      </activation>
      <build>
	<plugins>
	  <plugin>
	    <groupId>org.codehaus.mojo</groupId>
	    <artifactId>exec-maven-plugin</artifactId>
	    <version>1.1</version>
	    <extensions>true</extensions>
	    <executions>
	      <execution>
		<phase>package</phase>
		<goals>
		  <goal>exec</goal>
		</goals>
	      </execution>
	    </executions>
	  </plugin>
	</plugins>
      </build>
    </profile>
  </profiles>

  <build>

    <plugins>

      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-deploy-plugin</artifactId>
	<version>2.5</version>
      </plugin>

      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>rpm-maven-plugin</artifactId>
	<configuration>
	  <release>${RELEASE}</release>
	  <summary>StratusLab Web Monitor</summary>
	  <name>stratuslab-web-monitor</name>
	  <vendor>SixSq Sarl</vendor>
	  <copyright>Apache 2.0</copyright>
	  <url>http://stratuslab.eu/</url>

	  <requires>
	    <require>httpd</require>
	  </requires>

	  <distribution>StratusLab</distribution>
	  <group>StratusLab</group>
	  <packager>StratusLab</packager>

	  <buildarch>noarch</buildarch>

	  <mappings>
	    <mapping>
	      <directory>/var/www/cgi-bin</directory>
	      <directoryIncluded>false</directoryIncluded>
	      <filemode>755</filemode>
	      <username>root</username>
	      <groupname>root</groupname>
	      <sources>
		<source>
		  <location>${project.build.directory}/python</location>
		</source>
	      </sources>
	    </mapping>
	    <mapping>
	      <directory>/var/www/cgi-bin</directory>
	      <directoryIncluded>false</directoryIncluded>
	      <filemode>644</filemode>
	      <username>root</username>
	      <groupname>root</groupname>
	      <sources>
		<source>
		  <location>${basedir}/src/main/html</location>
		  <includes>
		    <include>*.tpl</include>
		  </includes>
		</source>
	      </sources>
	    </mapping>
	    <mapping>
	      <directory>/var/www/cgi-bin</directory>
	      <filemode>644</filemode>
	      <username>root</username>
	      <groupname>root</groupname>
	      <sources>
		<source>
		  <location>../src</location>
		</source>
	      </sources>
	    </mapping>
	    <mapping>
	      <directory>/var/www/html/css</directory>
	      <directoryIncluded>false</directoryIncluded>
	      <filemode>644</filemode>
	      <username>root</username>
	      <groupname>root</groupname>
	      <sources>
		<source>
		  <location>${basedir}/src/main/css</location>
		</source>
	      </sources>
	    </mapping>
	  </mappings>
	  <installScriptlet>
	    <script>                                                                
	      #
	      # This is a nasty hack to turn off the /usr/lib/rpm/brp-python-bytecompile
	      # script.  This script tries to precompile the python code, but causes the                                             
	      # rpm packaging to fail because the *.pyc and *.pyo files are not listed in
	      # the list of files created by maven.
	      #

	      export RPM_BUILD_ROOT=
	    </script>
	  </installScriptlet>
	</configuration>
      </plugin>

      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>exec-maven-plugin</artifactId>
	<executions>
	  <execution>
	    <goals>
	      <goal>exec</goal>
	    </goals>
	  </execution>
	</executions>
	<configuration>
	  <executable>fakeroot</executable>
	  <arguments>
	    <argument>alien</argument>
	    <argument>--to-deb</argument>
	    <argument>--scripts</argument>
	    <argument>target/rpm/stratuslab-web-monitor/RPMS/noarch/stratuslab*.rpm</argument>
	  </arguments>
	</configuration>
      </plugin>
    </plugins>

  </build>

