<assembly>
  <id>cgi-bundle</id>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <fileSets>

    <fileSet>
      <directory>${project.build.directory}/python</directory>
      <outputDirectory>cgi-bin</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>src/main/html</directory>
      <outputDirectory>cgi-bin</outputDirectory>
      <includes>
	<include>*.tpl</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>src/main/css</directory>
      <outputDirectory>css</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>../../src</directory>
      <outputDirectory>cgi-bin</outputDirectory>
    </fileSet>

  </fileSets>

</assembly>
