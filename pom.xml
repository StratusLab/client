<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>eu.stratuslab</groupId>
	<artifactId>stratuslab</artifactId>
	<packaging>pom</packaging>
	<version>0.1.0-SNAPSHOT</version>
	<name>stratuslab</name>
	<url>http://stratuslab.eu/</url>

	<distributionManagement>
		<repository>
			<id>stratuslab.snapshots</id>
			<name>Snapshots</name>
			<url>http://repo.stratuslab.eu:8081/content/repositories/snapshots/</url>
		</repository>
	</distributionManagement>

	<profiles>
		<profile>
			<activation>
				<file>
					<exists>/bin/rpm</exists>
				</file>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<executions>
							<execution>
								<goals>
									<goal>attached-rpm</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<build>

		<plugins>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<configuration>
					<copyright>StratusLab Collaboration</copyright>
					<distribution>StratusLab</distribution>
					<group>StratusLab</group>
					<packager>StratusLab</packager>
					<changelogFile>src/changelog</changelogFile>
					<buildarch>noarch</buildarch>
					<mappings>
						<mapping>
							<directory>/usr/bin</directory>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<source>
									<location>scripts</location>
									<includes>
										<include>stratus-*</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/usr/lib/stratuslab</directory>
							<filemode>644</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<source>
									<location>src</location>
									<excludes>
										<exclude>stratus-*</exclude>
									</excludes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/usr/lib/stratuslab/scripts</directory>
							<filemode>755</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<source>
									<location>scripts</location>
								</source>
							</sources>
						</mapping>
					</mappings>
					<preinstallScriptlet>
						<script>echo "Installing StratusLab v${project.version}"</script>
					</preinstallScriptlet>
					<postinstallScriptlet>
						<script>/usr/lib/stratuslab/scripts/post-install</script>
					</postinstallScriptlet>
				</configuration>
			</plugin>

      			<plugin>
        			<groupId>org.codehaus.mojo</groupId>
        			<artifactId>exec-maven-plugin</artifactId>
			        <executions>
          				<execution>
				            <goals>
				              	<goal>exec</goal>
				            </goals>
			    	      	</execution>
        			</executions>
        			<configuration>
          				<executable>scripts/alien-to-deb</executable>
        			</configuration>
      			</plugin>
		</plugins>

	</build>

</project>
