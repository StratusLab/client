<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>eu.stratuslab.pkgs</groupId>
    <artifactId>stratuslab.web.monitor</artifactId>
    <packaging>rpm</packaging>
    <version>0.1-StratusLab.SNAPSHOT</version>
    <name>StratusLab Web Monitor</name>
    <url>http://stratuslab.eu/</url>

    <parent>
            <groupId>eu.stratuslab.pkgs</groupId>
            <artifactId>stratuslab.parent</artifactId>
        <version>0.1-StratusLab.SNAPSHOT</version>
    </parent>
    
    <profiles>
        <profile>
            <id>rpm</id>
            <activation>
                <file>
                    <exists>/bin/rpm</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                            <extensions>true</extensions>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>rpm</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>deb</id>
            <activation>
                <file>
                    <exists>/usr/bin/alien</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.1</version>
                        <extensions>true</extensions>
                            <executions>
                                <execution>
                                    <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.5</version>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <configuration>
                <release>${RELEASE}</release>
                <summary>StratusLab Web Monitor</summary>
                <name>stratuslab-web-monitor</name>
                <group>System</group>
                <vendor>StratusLab</vendor>
                <packager>StratusLab</packager>
                <copyright>StratusLab Collaboration</copyright>
                <url>http://stratuslab.eu/</url>
                <provides/>
                <requires/>
                <distribution>StratusLab</distribution>
                <group>StratusLab</group>
                <packager>StratusLab</packager>
                    <buildarch>noarch</buildarch>
                    <mappings>
                        <mapping>
                            <directory>/usr/lib/stratuslab/cgi</directory>
                            <filemode>755</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>.</location>
                                    <includes>
                                        <include>*.py</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/lib/stratuslab/cgi</directory>
                            <filemode>644</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>.</location>
                                    <includes>
                                        <include>*.tpl</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/lib/stratuslab/cgi</directory>
                            <filemode>644</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>../src</location>
                                </source>
                            </sources>
                        </mapping>
                        <mapping>
                            <directory>/var/www/html</directory>
                            <filemode>644</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
                            <sources>
                                <source>
                                    <location>.</location>
                                    <includes>
                                        <include>stratuslab.css</include>
                                    </includes>
                                </source>
                            </sources>
                        </mapping>
                    </mappings>
                    <postinstallScriptlet>
                        <script>
<![CDATA[
import os
import sys
import subprocess
cgiConf = '''ScriptAlias /cgi-bin/ "/usr/lib/stratuslab/cgi/"

<Directory "/usr/lib/stratuslab/cgi">
    AllowOverride None
    Options None
    Order allow,deny
    Allow from all
    AddHandler cgi-script py
</Directory>
'''

def getApacheConfDir():
    possibleDirs = ['/etc/httpd/conf.d', '/etc/apache2/conf.d']
    for d in possibleDirs:
        if os.path.exists(d):
            return d
    return None

def createConfFile():
    confDir = getApacheConfDir()
    if not confDir:
        print 'Failed to find valid Apache2/Httpd config dir. Is Apache2/Httpd installed?'
        sys.exit(-1)
    open(os.path.join(confDir,'stratuslab.conf'),'w').write(cgiConf)

def getServerCommand():
    commands = ['/etc/init.d/httpd', '/etc/inid.d/apache2']
    for c in commands:
        if os.path.exists(c):
            return c
    return None

def restartWebServer():
    cmd = getServerCommand()
    if not cmd:
        print 'Failed to find valid Apache2/Httpd init.d command. Is Apache2/Httpd installed?'
        sys.exit(-1)
    subprocess.call([cmd, 'restart'])

createConfFile()
restartWebServer()
                        ]]></script>
                        <Program>/usr/bin/python</Program>
                    </postinstallScriptlet>
                    <preremoveScriptlet>
                        <script>
import os

files = ['/etc/httpd/conf.d/stratuslab.conf','/etc/apache2/conf.d/stratuslab.conf']
for f in files:
    try:
        os.remove(f)
    except OSError:
        pass
                        </script>
                        <Program>/usr/bin/python</Program>
                    </preremoveScriptlet>
                </configuration>
            </plugin>

                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <goals>
                                <goal>exec</goal>
                            </goals>
                            </execution>
                    </executions>
                    <configuration>
                        <executable>fakeroot</executable>
                        <arguments>
                            <argument>alien</argument>
                        <argument>--to-deb</argument>
                        <argument>--scripts</argument>
                        <argument>target/rpm/stratuslab-web-monitor/RPMS/noarch/stratuslab*.rpm</argument>
                        </arguments>
                    </configuration>
                </plugin>
        </plugins>

    </build>

</project>
