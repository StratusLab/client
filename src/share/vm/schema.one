# ---- Stratuslab VM template ----

CPU    = %(vm_cpu)s
MEMORY = %(vm_ram)s

%(os_options)s

DISK = [
source   = "%(vm_image)s",
target   = "sda",
readonly = "no"
]

DISK = [
type     = swap,
size     = %(vm_swap)s,
target   = "sdb",
readonly = "no"
]

%(vm_nic)s
%(graphics)s
%(raw_data)s

CONTEXT = [
%(nic_ip)s
%(nic_netmask)s
%(nic_network)s
root_pubkey = %(user_key_name)s,
files = "%(user_key_path)s %(one_home)s/share/scripts/init.sh",
%(extra_context)s
target = "sdn"
]
